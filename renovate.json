{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["npm", "github-actions"],
  "dependencyDashboard": true,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 8,
  "separateMajorMinor": true,
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "github actions"
    },
    {
      "matchPackageNames": ["react", "react-dom", "react-router-dom"],
      "groupName": "react ecosystem"
    },
    {
      "matchPackagePatterns": ["^jest$", "^@jest/", "^@testing-library/", "babel-jest"],
      "groupName": "test tooling"
    },
    {
      "matchPackagePatterns": ["^webpack", "^@babel/", "^babel", "^eslint", "^prettier"],
      "groupName": "build tooling"
    }
  ]
}
